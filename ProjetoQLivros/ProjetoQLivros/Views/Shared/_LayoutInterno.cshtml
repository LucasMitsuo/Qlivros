@{
    var usuarioAtual = Session["usuario"] as TabLeitor;
    var notificacao = Session["notificacao"] as string;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>QLivros</title>
    <meta name="description" content="QLivros - Doação e troca de livros" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="generator" content="Codeply">
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" />
    <link href="~/Content/css/jasny-bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/navmenu-reveal.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/css/bootstrap.custom.css" />
    <link rel="stylesheet" href="~/Content/css/styles.css" />
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Fredoka+One' rel='stylesheet' type='text/css'>
</head>
<body>
    <!--MENU LATERAL-->
    <div class="navmenu navmenu-default navmenu-fixed-left">
        <div class="navmenu-brand" href="#">Menu Principal</div>
        <ul class="nav navmenu-nav">
            <li>@Html.IconActionLink("glyphicon glyphicon-search","Pesquisar exemplares","Index","Home",new{idLeitor = usuarioAtual.idLeitor},new{})</li>
            <li>@Html.IconActionLink("glyphicon glyphicon-share","Comece uma corrente","ComecarCorrente","Exemplar",new{idLeitor = usuarioAtual.idLeitor},new{}) </li>
            
            <li>@Html.IconActionLink("glyphicon glyphicon-arrow-right glyphicon", "Doar exemplar", "FormDoar", "Exemplar", new { idLeitor = usuarioAtual.idLeitor }, new { })</li>
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#exemplares">
                    Meus exemplares
                    <span class="glyphicon glyphicon-book"></span>
                </a>
                <ul class="dropdown-menu navmenu-nav">
                    <li>
                        @Html.IconActionLink("glyphicon glyphicon-lock", "Romper corrente", "RomperCorrente", "Exemplar", new { idLeitor = usuarioAtual.idLeitor }, new { })
                    </li>
                    <li>
                        @Html.IconActionLink("glyphicon glyphicon-ok", "Disponibilizar exemplar", "FormDisponibilizar", "Exemplar", new { idLeitor = usuarioAtual.idLeitor }, new { })
                    </li>
                </ul>
            </li>
            <li>@Html.IconActionLink("glyphicon glyphicon-flag", "Acompanhar histórico", "AcompanharHistorico", "Historico", new { idLeitor = usuarioAtual.idLeitor }, new { })</li>
            <li>@Html.IconActionLink("glyphicon glyphicon-star", "Verificar Ranking", "ListaRanking", "Historico", new { idLeitor = usuarioAtual.idLeitor }, new { })</li>
            <li>@Html.IconActionLink("glyphicon glyphicon-file", "Publicar resenha", "FormResenha", "Resenha", new { idLeitor = usuarioAtual.idLeitor }, new { })</li>
            <li><a href="#section8">Chat<span class="glyphicon glyphicon-comment"></span></a></li>
            <li><a href="#section4">Meus dados<span class="glyphicon glyphicon-th-list"></span></a></li>
           
            <li>@Ajax.ActionLink("Cancelar participação", "ConfirmCancelamento", "Leitor", new { }, new AjaxOptions() { UpdateTargetId = "qlivros-modal-content", OnSuccess = "QLivrosModal", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" })</li>
            <li>@Html.IconActionLink("glyphicon glyphicon-off","Sair","Login","Home",new{},new{})</li>

        </ul>
    </div>

    <!--MENU SUPERIOR-->
    <div class="canvas">
        <div class="navbar navbar-blue navbar-fixed-top">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle navbar-toggle-blue" data-toggle="offcanvas" data-recalc="false" data-target=".navmenu" data-canvas=".canvas">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="navbar-collapsible">
                <ul class="nav navbar-nav navbar-left">
                    <li>@Html.IconActionLink("glyphicon glyphicon-search", "Pesquisar exemplares", "Index", "Home", new { idLeitor = usuarioAtual.idLeitor }, new { })</li>
                    <li>@Html.IconActionLink("glyphicon glyphicon-share", "Comece uma corrente", "ComecarCorrente", "Exemplar", new { idLeitor = usuarioAtual.idLeitor }, new { }) </li>
                
                    <li>@Html.IconActionLink("glyphicon glyphicon-arrow-right glyphicon", "Doar exemplar", "FormDoar", "Exemplar", new { idLeitor = usuarioAtual.idLeitor }, new { })</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#exemplares">
                            Meus exemplares
                            <span class="glyphicon glyphicon-book"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.IconActionLink("glyphicon glyphicon-lock", "Romper corrente", "RomperCorrente", "Exemplar", new { idLeitor = usuarioAtual.idLeitor }, new { })
                            </li>
                            <li>
                                @Html.IconActionLink("glyphicon glyphicon-ok", "Disponibilizar exemplar", "FormDisponibilizar", "Exemplar", new { idLeitor = usuarioAtual.idLeitor }, new { })
                            </li>
                        </ul>
                    </li>
                    <li>@Html.IconActionLink("glyphicon glyphicon-flag", "Acompanhar histórico", "AcompanharHistorico", "Historico", new { idLeitor = usuarioAtual.idLeitor }, new { })</li>
                    <li>@Html.IconActionLink("glyphicon glyphicon-star", "Verificar Ranking", "ListaRanking", "Historico", new { idLeitor = usuarioAtual.idLeitor }, new { })</li>
                    <li>@Html.IconActionLink("glyphicon glyphicon-file", "Publicar resenha", "FormResenha", "Resenha", new { idLeitor = usuarioAtual.idLeitor }, new { })</li>
                    <li><a href="#section8">Chat<span class="glyphicon glyphicon-comment"></span></a></li>
                    <li><a href="#section4">Meus dados<span class="glyphicon glyphicon-th-list"></span></a></li>
                    <li>@Ajax.ActionLink("Cancelar participação", "ConfirmCancelamento", "Leitor", new { }, new AjaxOptions() { UpdateTargetId = "qlivros-modal-content",OnSuccess="QLivrosModal", InsertionMode = InsertionMode.Replace,HttpMethod= "GET" })</li>
                    <li>@Html.IconActionLink("glyphicon glyphicon-off", "Sair", "Login", "Home", new { }, new { })</li>

                </ul>
            </div>
        </div>
        <div class="container-fluid center-content">
            <header class="row header-main">
                <div class="col-xs-12 text-right">
                    @if (notificacao == "SIM")
                    {
                        @Html.IconActionLink("glyphicon glyphicon-envelope", "Lista", "Historico", new { idLeitor = usuarioAtual.idLeitor }, new { })
                    }
                    <div class="user">
                        <a href="#dados" id="logout">
                            Olá, @usuarioAtual.dsLogin
                            <span class="glyphicon glyphicon-user"></span>
                        </a>
                    </div>
                </div>
            </header>
            <section class="row text-center section-main">
                <div class="col-xs-12 main-content">
                    <div class="main-block main-search">
                        @RenderBody()
                    </div>
                </div>
            </section>
            <footer class="row footer-main">
                <small class="copyright">Copyright ® 2015 - QLivros. Todos os direitos reservados. All rights reserved.</small>
            </footer>
        </div>
    </div>
    @Html.Partial("Modal")
    <script src="~/Content/js/jquery-2.1.4.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/jasny-bootstrap.min.js"></script>
    <script src="~/Content/js/qlivros-modal.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
</body>
</html>
