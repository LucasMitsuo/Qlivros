@model DoacaoViewModel
@{
    ViewBag.Title = "FormDoar";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<h2>Formulário de Doação</h2>

@using (Html.BeginForm("DadosReceptor", "Doacao", FormMethod.Post, new { @class = "" }))
{
    @Html.Hidden("idDoador",Model.idDoador)
    <div class="panel-body">
        <div class="form-group">
            @Html.Label("Escolha um exemplar", new { @for = "input-titulo", @class = "form-horizontal" })
            @Html.DropDownList("idExemplar", Model.OpcoesExemplares, new { @class = "form-horizontal" })
        </div>
        <div class="form-group">
            @Html.Label("Email", new { @for = "input-titulo", @class = "form-horizontal" })

            @Html.TextBox("email",null,null,new { @class = "form-control", placeholder = "Entre com o email do receptor", type = "text" })
        </div>

        <div class="form-group">
            @Html.Label("Login", new { @for = "input-titulo", @class = "form-horizontal" })

            @Html.TextBox("login", null, null, new { @class = "form-control", placeholder = "Entre com o login do receptor", type = "text" })
        </div>
        
        @if (Model.Mensagem != null)
        {
            <h5>@Model.Mensagem</h5>
        }
       
        <button type="submit" class="btn btn-default">Doar exemplar</button>
    </div>
}


