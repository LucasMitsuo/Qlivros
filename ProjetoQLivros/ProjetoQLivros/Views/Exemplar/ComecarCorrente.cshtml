@model TabLeitor
@{
    ViewBag.Title = "ComecarCorrente";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<form class="text-center cad-Titulos">
    <h1>Cadastro de Títulos</h1>
    <fieldset class="text-left">
        <div class="form-group">
            <!-- Opcional <label for="titulo">Título</label> -->
            <input type="text" class="form-control" id="titulo" placeholder="Título" name="titulo">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="autor" placeholder="Autor" name="autor">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="edicao" placeholder="Edição" name="edicao">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="editora" placeholder="Editora" name="editora">
        </div>
    </fieldset>
    <input type="submit" class="btn btn-primary btn-md" value="Cadastrar">
    <input type="reset" class="btn btn-primary btn-md" value="Limpar">
</form>
                    

