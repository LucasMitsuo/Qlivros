@model Tuple<TabExemplar,int>
@{
    Layout = "~/Views/Shared/_LayoutModal.cshtml";
}

<div class="modal-content bs-callout bs-callout-danger">
    <div class="modal-header">
        
        <h3 class="modal-title" id="myModalLabel"><span class="glyphicon glyphicon-book"></span> Disponibilizar Exemplar</h3>
    </div>
    <div class="modal-body">
        <p class="lead">Deseja mesmo disponibilizar o exemplar ?</p>
        <p><small>Se o fizer, não será mais possível torná-lo indisponível</small><br />
            <small>caso queria continuar a leitura.</small>
        </p>

        <strong>Título:</strong>@Model.Item1.TabTitulo.nmTitulo<br>
        <strong>Autor:</strong>@Model.Item1.nmAutor<br>
        <strong>Editora:</strong>@Model.Item1.nmEditora<br>
        <strong>Edição: </strong>@Model.Item1.dsEdicao

    </div>

    <div class="modal-footer text-right">

        @Ajax.ActionLink("Sim, disponibilizar", "AlterarStatus", "Exemplar", new { idExemplar = @Model.Item1.idExemplar,idLeitor = @Model.Item2 },
        new AjaxOptions()
        {
            HttpMethod = "Post",
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "qlivros-modal-content",
            OnSuccess = "QLivrosModal",
        }, new { @class = "btn btn-primary" })


        <button type="button" class="btn btn-default" data-dismiss="modal" onclick="location.reload()">Cancelar</button>

    </div>

</div>

